/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode() : val(0), next(nullptr) {}
 *     ListNode(int x) : val(x), next(nullptr) {}
 *     ListNode(int x, ListNode *next) : val(x), next(next) {}
 * };
 */
class Solution {
public:
    ListNode* middleNode(ListNode* head) {
        int x=0;
        ListNode* ans;
        ListNode* temp = head;
    
        while(temp->next!=NULL){
            x++;
            temp=temp->next;
        }
        if(x%2==0){
            x=x/2;
        }
        else{
            x=(x+1)/2;
        }
        for(int i=0;i<x;i++){
            head=head->next;
        }
        return head;

    }
};
